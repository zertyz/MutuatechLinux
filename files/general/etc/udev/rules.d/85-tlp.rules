## THIS RULE HAS BEEN DISABLED AS IT CAUSES TLP TO BE CALLED EVERY SECOND ON SEVERAL HARDWARE!!
# handle change of power source ac/bat, ignore input device batteries
#ACTION=="change", SUBSYSTEM=="power_supply", KERNEL!="hidpp_battery*", RUN+="/usr/bin/tlp auto"

# handle added usb devices (exclude subdevices via DRIVER=="USB")
ACTION=="add", SUBSYSTEM=="usb", DRIVER=="usb", ENV{DEVTYPE}=="usb_device", RUN+="/usr/lib/udev/tlp-usb-udev usb %p"

# handle added usb disk devices (exclude partitions via ENV{DEVTYPE}=="disk")
ACTION=="add", SUBSYSTEM=="block", ENV{DEVTYPE}=="disk", ENV{ID_BUS}=="usb", RUN+="/usr/lib/udev/tlp-usb-udev disk %p"
